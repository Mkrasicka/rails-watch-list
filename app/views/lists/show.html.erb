<div class="container mt-5">
  <div class="row">
    <div class="col-xs-12 col-sm-10">
      <div class="d-flex align-items-center px-3">
        <h1 class="col-2-md mt-2 ms-2"><b><strong><%= @list.name.capitalize %>:</strong></b> <%= @list.bookmarks.size %>movies</h1>
        <%= link_to "Add a movie", new_list_bookmark_path(@list), class: '' %>
        <p class="flex-grow-1"></p>
      </div>
    </div>
    <div class="row">
    <% @list.movies.each do |movie| %>
      <div>
        <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
          <div class="">
            <%= image_tag(movie.poster_url, :class => "img")%>
            <h2><%= movie.title %></h2>
            <p><%= movie.overview %></p>
            <%# image tag is a short way to create an actual image %>
            <h5 class="">Rating <%= movie.rating %></h5>
            <p><% bookmark.comment %></p>
            <%= link_to "Delete",bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: '' %>
          </div>
      <% end %>
    </div>
  </div>
<%= link_to "Back", root_path, class: "" %>

  </div>
</div>
